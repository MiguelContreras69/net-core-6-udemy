@model IEnumerable<Rocosa.Models.Producto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Lista de Productos</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Producto" asp-action="Upsert" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i>
                Nuevo Producto
            </a>
        </div>

    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Nombre Producto
                    </th>
                    <th>
                        Precio
                    </th>
                    <th>
                        Categoria
                    </th>
                    <th>
                        Tipo
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th width="50%">@item.Nombre</th>
                        <th width="30%">@item.Precio</th>
                        <th width="30%">@item.Categoria.NombreCategoria</th>
                        <th width="30%">@item.TipoAplicacion.Nombre</th>

                        <th class="text-center">
                            <div class="w-75 btn-group" role="group"> 
                                <a asp-controller="Producto" asp-action="Upsert" asp-route-Id="@item.Id" class="btn btn-primary mx-2"><i class="fa-solid fa-pen-to-square"></i></a>
                                <a asp-controller="Producto" asp-action="Eliminar" asp-route-Id="@item.Id" class="btn btn-danger mx-2"><i class="fa-solid fa-trash"></i></a>

                            </div>
                        </th>
                    </tr>
                }
            </tbody>


        </table>

    }
    else
    {
        <p>No se encontraron registros de productos</p>
    }


</div>